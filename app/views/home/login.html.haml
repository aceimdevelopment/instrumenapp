.top-box.text-center.loginscreen.animated.fadeInDown
  %div
    %form.m-t{:action => "#", :role => "form"}
      .form-group
        %input.form-control{:placeholder => "Username", :required => true, :type => "email"}/
        %input.form-control{:placeholder => "Password", :required => true, :type => "password"}/
        %button.btn.btn-primary.block.full-width.m-b{:type => "submit"} Login
      %a{:href => "#"}
        %small Forgot password?
      %p.text-muted.text-center
        %small Do not have an account?
      %a.btn.btn-sm.btn-white.btn-block{:href => "#{url_for :controller => 'pages', :action => 'register'}"} Create an account
    %p.m-t
      %small Inspinia we app framework base on Bootstrap 3 © 2015
